<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".FAQActivity">

    <!-- Pertanyaan dan Jawaban 1 -->
    <TextView
        android:id="@+id/tvQuestion1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bagaimana cara menambahkan catatan?"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAnswer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Untuk menambahkan catatan, klik fitur 'Tambah Catatan' di menu utama."
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pertanyaan dan Jawaban 2 -->
    <TextView
        android:id="@+id/tvQuestion2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dimana saya bisa melihat semua catatan saya?"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAnswer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Catatan Anda dapat dilihat di menu 'Catatan'."
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pertanyaan dan Jawaban 3 -->
    <TextView
        android:id="@+id/tvQuestion3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bagaimana cara mengakses panduan aplikasi ini?"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAnswer3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Panduan tersedia dalam bentuk PDF, klik tombol 'Panduan' untuk melihat."
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Kembali -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:backgroundTint="@color/darkblue"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
